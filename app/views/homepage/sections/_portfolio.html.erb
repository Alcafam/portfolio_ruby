<!-- Portfolio Section -->
    <section id="portfolio" class="portfolio section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Featured Projects</h2>
      </div><!-- End Section Title -->

      <div class="container">
        <div class="row d-flex justify-content-center">
          <% @projects.each do |project| %>
          <%= link_to project_path(project.slug), class: "card m-1 col-lg-3 col-md col-sm-12 text-decoration-none text-dark", style: "height: 350px;" do %>
            <div class="card-body">
              <h5 class="card-title"><%= project.title %></h5>
              <p class="card-text description-line-limit"><%= project.description %></p>
              <div>
                <% project.tags.first(2).each do |tag| %>
                  <span class="badge bg-secondary me-1" style="font-size: 0.75rem;"><%= tag.name %></span>
                <% end %>
                <span class="badge bg-secondary">
                  <i class="bi bi-calendar" style="font-size: 0.75rem;"></i> <%= project.year_created %>
                </span>
              </div>
              <div class="project-links mt-2">
                <i class="bi bi-github fs-3 me-2" onclick="event.stopPropagation(); window.open('<%= project.github_link %>', '_blank')"></i>
                <% if project.live_link.present? %>
                  <i class="bi bi-globe fs-3" onclick="event.stopPropagation(); window.open('<%= project.live_link %>', '_blank')"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>

          
          <div class="mt-3 text-center">
            <a href="/projects">View more</a>
          </div>
        </div>
      </div>

    </section><!-- /Portfolio Section -->