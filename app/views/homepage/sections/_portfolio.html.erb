<!-- Portfolio Section -->
    <section id="portfolio" class="portfolio section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Featured Projects</h2>
      </div><!-- End Section Title -->

      <div class="container">
        <div class="row d-flex justify-content-center">
          <% @projects.each do |project| %>
            <div class="card m-1 col-lg-3 col-md col-sm-12" style="height:350px">
              <div class="card-body">
                <h5 class="card-title"><%= project.title %></h5>
                <p class="card-text description-line-limit"><%= project.description %></p>
                <div class="project-liks">
                  <a href="<%= project.github_link %>" target="_blank"><i class="bi bi-github fs-3"></i></a>
                  <% if project.live_link.present? %>
                    <a href="<%= project.live_link %>" target="_blank"><i class="bi bi-globe fs-3"></i></a>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          
          <div class="mt-3 text-center">
            <a href="/projects">View more</a>
          </div>
        </div>
      </div>

    </section><!-- /Portfolio Section -->